#
# BeGadu Jamfile, v1.0
# Ten plik jest częścią kodu źródłowego BeGadu
# http://begadu.sf.net
#

SubDir TOP ;
LINKLIBS = -L./lib -L/boot/home/config/lib -lbe -lroot -lsocket -lbind -lgadu -ltranslation -lzeta ;
RESOURCE = BeGadu.rsrc Resources.rsrc ;

Main BeGadu :
	src/BeGadu.cpp src/Main.cpp src/Chat.cpp
	src/Debug.cpp src/Siec.cpp src/NetworkHandler.cpp
	src/Network.cpp src/Person.cpp
	src/Preferences.cpp src/GaduListItem.cpp src/GfxStuff.cpp
	src/GaduMenuItem.cpp src/ProfileWizard.cpp
	src/TabItem.cpp src/BGDeskbar.cpp
	src/xmalloc.c src/dynstuff.c src/strlcpy.c ;

BinPackage BeGadu-$(VERSION)-bin.zip ;
Depends BeGadu-$(VERSION).zip-bin : BeGadu ;
SourcePackage BeGadu-$(VERSION).zip ;
Depends BeGadu-$(VERSION).zip : BeGadu ;

NotFile package ;
Depends package :
	BeGadu-$(VERSION)-bin.zip
	BeGadu-$(VERSION).zip ;
